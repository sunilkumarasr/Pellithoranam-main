<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.stranger_sparks.viewmodel.HomeActivityViewModel" />
    </data>
<RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@drawable/ic_app_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/pelli_thoranam_logo"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivWhatsapp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/whatsapp"
                android:layout_gravity="center_vertical" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNotification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_notification_with_dot"
                android:layout_gravity="center_vertical" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFilter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_filter"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/actCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="Search City"
        android:textColorHint="#d3d3d3"
        android:imeOptions="actionDone"
        android:padding="@dimen/_6sdp"
        android:textColor="#207ABF"
        android:fontFamily="@font/mulish_regular"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_12sdp"
        tools:ignore="Autofill,TextFields"
        android:drawableEnd="@drawable/ic_search"
        android:drawableTint="#46307A"
        android:visibility="gone"
        android:layout_below="@+id/linear"
        />
    <fragment
        android:id="@+id/nav_host_fragment_activity_home"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        android:layout_above="@+id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/home_navigation"
       android:layout_below="@+id/actCity"

        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</layout>
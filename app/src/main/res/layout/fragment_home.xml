<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.stranger_sparks.view.activities.ui.fragments.home.HomeViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app_background"
            />-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/llAutoSearch"
                    android:background="@drawable/edit_text_corner">

                    <EditText
                        android:id="@+id/llAutoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="0.2"
                        android:background="@android:color/transparent"
                        android:includeFontPadding="false"
                        android:drawableLeft="@drawable/ic_search"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@color/grey"
                        android:hint="@string/search_for_profile"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />

                    <Button
                        android:id="@+id/btnSearchCitySubmit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/_15sdp"
                        android:drawableLeft="@drawable/ic_search"
                        android:background="@drawable/right_corner"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/img_filter"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/filter"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_gravity="center"
                    app:tint="@color/colorPrimary" />
            </LinearLayout>



            <!-- <androidx.core.widget.NestedScrollView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.fragments.LoginFragment"
                >

                <TextView
                    android:id="@+id/tvNoRecordsDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/no_profiles"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"

                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvUserProfiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    tools:itemCount="2"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_item_home_screen"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    />
                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />

            </RelativeLayout>
            <!-- </androidx.core.widget.NestedScrollView>-->
        </LinearLayout>
    </RelativeLayout>


</layout>


